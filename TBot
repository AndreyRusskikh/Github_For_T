



from telebot.types import ReplyKeyboardMarkup
import requests
import telebot


url = 'https://api.thecatapi.com/v1/images/search?mime_type=jpg'
bot = telebot.TeleBot('5570068886:AAFYxm-BItCqTKmY9rYjlYS9npP46pK_sWA')


@bot.message_handler(commands=['start'])
def start(message):
    markup = ReplyKeyboardMarkup(True, False)
    markup.row('Получить котика')
    bot.send_message(message.chat.id, 'Привет! Нажми кнопку ниже.', reply_markup=markup)


@bot.message_handler(regexp='Получить котика')
def cat(message):
    response = requests.get(url)
    data = response.json()
    cat = data[0]['url']

    bot.send_photo(message.chat.id, cat)


bot.polling(none_stop=True)