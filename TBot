@bot.message_handler(commands=['start'])
def welcome(message):


    # keyboard
    markup = type.ReplyKeyboardMarkup(resize_keyboard=True)
    item1 = type.KeyboardButton("Котик")
    item2 = type.KeyboardButton("Собака")

    markup.add(item1, item2)

    bot.send_message(message.chat.id, "Добро пожаловать, {0.first_name}!\nЯ - <b>{1.first_name}</b>, бот созданный чтобы быть подопытным кроликом.".format(message.from_user, bot.get_me()),
        parse_mode='html', reply_markup=markup)


@bot.message_handler(content_types=['text'])
def hahaha(message):
    if message.text == 'Котик':
        bot.send_message(message.chat.id, "Прости, сейчас не могу но скору скину")






